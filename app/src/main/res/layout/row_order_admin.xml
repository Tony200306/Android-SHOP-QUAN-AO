<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:id="@+id/UserN_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Name" />

        <TextView
            android:id="@+id/Address_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserN_admin"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Address" />

        <TextView
            android:id="@+id/Totall_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Address_admin"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Total" />

        <Button
            android:id="@+id/btntoShip"
            android:layout_width="128dp"
            android:layout_height="35dp"
            android:layout_below="@+id/Totall_admin"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="244dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="18dp"
            android:background="@color/blueish"
            android:text="To Ship"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/Shipped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Address_admin"
            android:layout_alignStart="@+id/btntoShip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="37dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Delivering..."
            android:textColor="@color/purple_200" />

        <TextView
            android:id="@+id/Received"
            android:layout_width="101dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="261dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="33dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Received"
            android:textColor="@color/darkgreen" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

